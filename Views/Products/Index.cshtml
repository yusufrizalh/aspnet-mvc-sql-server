@model List<Product>

<h3 class="text-center mb-4">
    List of Products
</h3>
<hr />

<div class="row mb-3">
    <div class="col-md-6">
        <a class="btn btn-primary"
           asp-controller="products"
           asp-action="create">
            New Product
        </a>
    </div>
</div>

<table class="table table-bordered table-hover">
    <thead>
        <tr class="table-dark">
            <th>ID</th>
            <th>Name</th>
            <th>Brand</th>
            <th>Category</th>
            <th>Price</th>
            <th>Image</th>
            <th>CreatedAt</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Brand</td>
                <td>@product.Category</td>
                <td>@product.Price</td>
                <td>
                    <img src="/products/@product.ImageFileName" width="100" />
                </td>
                <td>@product.CreatedAt.ToString("dd/MMM/yyyy")</td>
                <td class="d-flex justify-content-between align-items-center">
                    <a asp-controller="products"
                       asp-action="edit"
                       asp-route-id="@product.Id"
                       class="btn btn-link text-primary text-decoration-none">
                        Edit
                    </a>
                    <a asp-controller="products"
                       asp-action="delete"
                       asp-route-id="@product.Id"
                       class="btn btn-link text-danger text-decoration-none">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>